#!/usr/bin/env ruby

# This file is generated by Thruster. Do not edit it directly.
require "bundler/setup"

# Find the thruster executable in the gem
gem_spec = Gem.loaded_specs["thruster"]
if gem_spec
  # Look for the platform-specific executable
  platform = Gem::Platform.local.to_s
  exe_path = File.join(gem_spec.gem_dir, "exe", platform, "thrust")
  
  # Fallback to generic path if platform-specific doesn't exist
  unless File.exist?(exe_path)
    exe_path = File.join(gem_spec.gem_dir, "exe", "thrust")
  end
  
  if File.exist?(exe_path)
    exec exe_path, *ARGV
  else
    puts "Thruster executable not found in gem at #{exe_path}"
    exit 1
  end
else
  puts "Thruster gem not found"
  exit 1
end